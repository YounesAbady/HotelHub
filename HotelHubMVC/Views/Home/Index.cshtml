@model HotelHubMVC.ViewModels.HomeViewModel
<div style="background-color:white">
    <div id="carouselExampleCaptions" class="carousel slide w-100" data-bs-ride="carousel" style="z-index:1">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/pictures/hotel-background.jpg" class="d-block w-100" style="height:600px;" alt="...">
                <div class="carousel-caption slide-in">
                    <h4>PEACEFULLY LIVING</h4>
                    <p><span style="color:#fea116;font-size:xx-large">HotelHub</span><br />YOUR PARTNER WHEREVER YOU GO.</p>
                    <a href="#room-types" class="btn" style="background-color:#fea116;color:white;font-size:x-large;"><span style="font-size:medium">OUR ROOMS</span></a>
                    <a href="#reserve-form" class="btn" style="background-color:white;color:black;font-size:x-large;"><span style="font-size:medium">BOOK A ROOM</span></a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/pictures/hotel-background2.jpg" class="d-block w-100" style="height:600px;" alt="...">
                <div class="carousel-caption slide-in">
                    <h4>PEACEFULLY LIVING</h4>
                    <p><span style="color:#fea116;font-size:xx-large">HotelHub</span><br />YOUR PARTNER WHEREVER YOU GO.</p>
                    <a href="#room-types" class="btn" style="background-color:#fea116;color:white;font-size:x-large;"><span style="font-size:medium">OUR ROOMS</span></a>
                    <a href="#reserve-form" class="btn" style="background-color:white;color:black;font-size:x-large;"><span style="font-size:medium">BOOK A ROOM</span></a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div id="reserve-form">
        <form class="rectangle-reserve form-floating row p-4" method="post" asp-controller="Reservation" asp-action="Index">
            <div class="col">
                <label for="checkIn">Check In:</label>
                <input class="form-control m-1" type="date" id="checkIn" name="StartDate" value=@DateTime.Today asp-for="ReservationSearchDTO.StartDate" required>
            </div>
            <div class="col">
                <label for="checkOut">Check Out:</label>
                <input class="form-control m-1" type="date" id="checkOut" name="EndDate" value="@DateTime.Today" asp-for="ReservationSearchDTO.EndDate" required>
            </div>
            <div class="col">
                <label for="adults">Adults:</label>
                <select class="form-control m-1" id="adults" name="Adults" asp-for="ReservationSearchDTO.Adults" required>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>
            <div class="col">
                <label for="children">Childrens:</label>
                <select class="form-control m-1" id="children" name="Childrens" asp-for="ReservationSearchDTO.Childrens" required>
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                </select>
            </div>
            <div class="col">
                <label for="children">Branches:</label>
                <select class="form-control m-1" id="children" name="BranchId" asp-for="ReservationSearchDTO.BranchId" required>
                    @foreach (var branch in Model.Branches)
                    {
                        <option value="@branch.Id">@branch.BranchLocation</option>
                    }
                </select>
            </div>
            <div class="col">
                <label></label>
                <button class="btn form-control m-1" style="background:#fea116;color:white" type="submit">Search</button>
            </div>
        </form>
    </div>
    <div id="about" class="p-3" style="color:#fea116;margin-top:20px;">
        <div style="text-align:center">
            <h4>ABOUT US</h4>
            <h1><span style="color:#0f172b">Welcome to </span>HotelHub</h1>
            <span style="color:#666565;">
                Welcome to HotelHub, a name synonymous with world-class hospitality and unforgettable <br />
                travel experiences. At HotelHub, our mission is to create a home away from home for every  <br />
                guest, no matter where they are in the world. We are more than just a place to stay; we are<br />
                your trusted travel companion.
            </span>
        </div>
        <div class="row">
            <div class="box-about col">
                <h1><i class="bi bi-building"></i></h1>
                <h3 style="color:black">800</h3>
                <p style="color:#666565;">Rooms</p>
            </div>
            <div class="box-about col">
                <h1><i class="bi bi-person-fill-gear"></i></h1>
                <h3 style="color:black">3250</h3>
                <p style="color:#666565;">Staffs</p>
            </div>
            <div class="box-about col">
                <h1><i class="bi bi-people-fill"></i></h1>
                <h3 style="color:black">10000+</h3>
                <p style="color:#666565;">Clients</p>
            </div>
        </div>
    </div>
    <div id="branches" class="p-3" style="color:#fea116;margin-top:20px;text-align:center;align-content:center">
        <h4>OUR BRANCHES</h4>
        <h1><span style="color:#0f172b">Explore Our </span>BRANCHES</h1>
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 row-cols-lg-3 row-cols-xl-3 g0">
            @foreach (var branch in Model.Branches)
            {
                <div class="col p-2 d-flex justify-content-center">
                    <div class="card" style="width: 18rem;border:double;border-color:#ccc">
                        <img src="@branch.BranchPictureURL" class="card-img-top" alt="..." height="220">
                        <div class="card-body">
                            <h5 class="card-title" style="color:#0f172b">HotelHub - @branch.BranchLocation</h5>
                            <p class="card-text" style="color:#666565">@branch.BranchDescription</p>
                            <a href="#reserve-form" class="btn" style="background-color:#fea116;color:white">Make A Reservation</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="room-types" class="p-3" style="color:#fea116;margin-top:20px;text-align:center;align-content:center">
        <h4>OUR ROOMS</h4>
        <h1><span style="color:#0f172b">Explore Our </span>ROOMS</h1>
        <div class="p-3 row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-2 g0" style="color:#fea116;margin-top:20px;text-align:center;align-content:center">
            @foreach (var roomType in Model.RoomTypes)
            {
                <div class="col p-2 d-flex justify-content-center">
                    <div class="outer-square-room-types">
                        <div class="inner-square-room-types"><img id="inner-square-img" src="pictures/room.png" /></div>
                        <div class="title-room-types">@roomType.RoomType</div>
                        <div class="description-room-types">@roomType.RoomDescription</div>
                        <div class="row" style="color:#0f172b;padding:10px;">
                            <div class="col"><img src="pictures/bed.png"><br>@roomType.Beds</div>
                            <div class="col"><h5 class="bi bi-aspect-ratio"></h5>@roomType.RoomSize</div>
                        </div>
                        <div class="row" style="color:#0f172b;padding:10px;">
                            <div class="col"><h5 class="bi bi-people-fill"></h5>@roomType.Occupancy</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@if (TempData["Msg"] != null)
{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    if (TempData["Status"] == "success")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'success',
                title: '@TempData["Msg"]',
                showConfirmButton: false,
                timer: 2500
            })
        </script>
    }
    else if (TempData["Status"] == "error")
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'error',
                title: '@TempData["Msg"]',
                showConfirmButton: false,
                timer: 2500
            })
        </script>
    }
    else
    {
        <script type="text/javascript">
            Swal.fire({
                icon: 'warning',
                title: '@TempData["Msg"]',
                showConfirmButton: true
            })
        </script>
    }
}