@{
    int counter = 0;
}
@model HotelHubMVC.ViewModels.ReservationViewModel
<div class="accordion-container">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        @foreach (var room in Model.Rooms)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target=@("#panelsStayOpen" + counter) aria-expanded="true" aria-controls=@("#panelsStayOpen" + counter)>
                        @room.RoomName &emsp;&emsp; <span style="color:#0f172b;"> @room.Price<i class="bi bi-currency-dollar"></i> Avg. Per night</span>
                    </button>
                </h2>
                <div>
                    <div id=@("panelsStayOpen"+counter) class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
                        <div class="accordion-body row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-2 g0">
                            <div id="carouselExampleSlidesOnly" class="carousel slide col" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    @foreach (var img in room.RoomPictures)
                                    {
                                        if (img.RoomId.Equals(room.Id))
                                        {
                                            if (room.RoomPictures.First().RoomPictureURL == img.RoomPictureURL)
                                            {
                                                <div class="carousel-item active">
                                                    <img src=@img.RoomPictureURL class="d-block" style="height:400px;width:400px;border:double;border-color:#ccc" alt="...">
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src=@img.RoomPictureURL class="d-block" style="height:400px;width:400px;border:double;border-color:#ccc" alt="...">
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                            <div class="col" style="text-align:center;">
                                <h4 style="color:#0f172b">Reservation</h4>
                                <br>
                                <div class="row">
                                    <div class="col">Room Type: </div>
                                    <div class="col" style="color:#fea116">@room.RoomType.RoomType</div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col">Number Of Room Avaliable: </div>
                                    <div class="col" style="color:#fea116">@room.Quantity</div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col">Number Of Beds: </div>
                                    <div class="col" style="color:#fea116">@room.RoomType.Beds</div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col">Occupancy: </div>
                                    <div class="col" style="color:#fea116">@room.RoomType.Occupancy</div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col" style="color:#fea116">@room.RoomType.RoomDescription</div>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="col"><button class="btn" style="background-color:#fea116;color:white">Book Now</button></div>
@*                                     <div class="col">
                                        <button class="btn" id="decrementButton" style="background-color:#fea116;color:white">-</button>&emsp;
                                        <span id="counterValue">0</span>&emsp;
                                        <button class="btn" id="incrementButton" style="background-color:#fea116;color:white">+</button>
                                        <form id="counterForm">
                                            <input type="hidden" name="counterValue" id="hiddenCounterValue" value="0">
                                        </form>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            counter++;
        }
    </div>
</div>